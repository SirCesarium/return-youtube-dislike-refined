{
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDesc__",
  "default_locale": "en",
  "version": "__RYD_VERSION__",
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "ryd-refined-community@extension",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "background": {
    "scripts": [
      "ryd.background.js"
    ]
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "https://*.youtube.com/*",
    "storage",
    "https://returnyoutubedislikeapi.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "exclude_matches": [
        "https://*.music.youtube.com/*"
      ],
      "run_at": "document_idle",
      "css": [
        "content-style.css"
      ],
      "js": [
        "ryd.content-script.js"
      ]
    }
  ],
  "options_ui": {
    "page": "popup.html",
    "open_in_tab": false
  },
  "web_accessible_resources": [
    "menu-fixer.js"
  ]
}